{
        "version": "0.2.0",
        "configurations": [
                {
                        "name": "(gdb) Launch",
                        "type": "cppdbg",
                        "request": "launch",
                        "program": "${workspaceFolder}/minishell",
                        "args": [],
                        "stopAtEntry": false,
                        "cwd": "${workspaceFolder}",
                        "environment": [],
                        "externalConsole": false,
                        "MIMode": "gdb",
                        "setupCommands": [
                                {
                                        "description": "Enable pretty-printing for gdb",
                                        "text": "-enable-pretty-printing",
                                        "ignoreFailures": true
                                },
                                {
                                        "description": "Set Disassembly Flavor to Intel",
                                        "text": "-gdb-set disassembly-flavor intel",
                                        "ignoreFailures": true
                                }
                        ],
			//"preLaunchTask": "build"  // <-- Add this line to run the build task first
                },
        ]
}